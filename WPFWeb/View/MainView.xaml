<Window x:Class="WPFWeb.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFWeb.View"
        xmlns:viewModel="clr-namespace:WPFWeb.ViewModel"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Title="MainView" Height="450" Width="800"
        Icon="pack://application:,,,/Resources/app.ico"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border
        x:Name="mainBorder"
        Background="White"
        CornerRadius="12.5, 12.5, 1, 1"
        BorderThickness="2"
        BorderBrush="BlueViolet"
        >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" x:Name="titleBarRow"/>
                <RowDefinition Height="50" x:Name="navigationBarRow"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#2D2D30" 
            x:Name="titleBar"
            CornerRadius="10,10,0,0"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{Binding TitleText}" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Margin="15,0,0,0"
                       FontSize="14"/>
                    <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,10,0">
                        <Button Content="─" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0"
                        Click="Minimize_Click"
                        FontSize="16"/>
                        <Button Content="□" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0"
                        Click="Maximize_Click"
                        FontSize="16"/>
                        <Button Content="✕" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0"
                        Click="Close_Click"
                        FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Navigation Bar -->
            <Border Grid.Row="1" Background="#F5F5F5" Padding="10,5"
            x:Name="navigationBar">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="←" 
                    Width="35" Height="35" Margin="5,0"
                    Command="{Binding GoBackCommand}"/>
                    <Button Grid.Column="1" Content="→" 
                    Width="35" Height="35" Margin="5,0"
                    Command="{Binding GoForwardCommand}"/>
                    <Button Grid.Column="2" Content="↻" 
                    Width="35" Height="35" Margin="5,0"
                    Command="{Binding ReloadCommand}"/>
                    <TextBox Grid.Column="3" 
                     Text="{Binding AddressBarText, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center"
                     Margin="5,0"
                     Padding="5">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding NavigateCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="4" Content="Go" 
                    Width="50" Height="35" Margin="5,0"
                    Command="{Binding NavigateCommand}"/>
                    <Button Grid.Column="5" Content="🏠" 
                    Width="35" Height="35" Margin="5,0"
                    Command="{Binding HomeCommand}"/>
                </Grid>
            </Border>

            <!-- WebView2 -->
            <wv2:WebView2 Grid.Row="2" 
                  x:Name="webView"
                  Source="{Binding Url, Mode=TwoWay}"/>
        </Grid>
    </Border>
</Window>
